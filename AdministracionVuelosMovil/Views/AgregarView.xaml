                    <Label TextColor="{StaticResource GrisBordes}">Pais Destino</Label>
                    <Grid>
                        <Entry TextColor="White" 
                           Placeholder="ESCRIBA PAIS DE DESTINO DEL VUELO"               
                           PlaceholderColor="{StaticResource GrisBordes}"
                           ></Entry>
                        <BoxView
                        HeightRequest="1"
                        Color="White"
                        VerticalOptions="End"
                        Margin="0"></BoxView>
                    </Grid>
                </StackLayout>
            </StackLayout>

        </StackLayout>

        <Border Grid.Row="1"
                BackgroundColor="White"
                Margin="30,0,30,80"
                StrokeThickness="0"
                >
            <Border.Resources>
                <Style TargetType="StackLayout">
                    <Setter Property="Margin" Value="0,10"></Setter>
                </Style>
            </Border.Resources>
            <StackLayout Margin="20,0"
                         VerticalOptions="EndAndExpand">

                
                <StackLayout>
                    <Label Style="{StaticResource SubtitleLabel}">Estado</Label>
                    <Picker Background="#f1f1f1"
                        HeightRequest="60"
                        Margin="0,10"
                        TextColor="{StaticResource Azul1}"
                        ></Picker>
                </StackLayout>

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <StackLayout>
                        <Label Style="{StaticResource SubtitleLabel}">Llegada</Label>
                        <Grid>
                            <StackLayout Orientation="Horizontal" Margin="0">
                                <DatePicker TextColor="{StaticResource Azul1}"></DatePicker>
                                <TimePicker TextColor="{StaticResource Azul1}"
                                            Margin="50,0"></TimePicker>
                            </StackLayout>
                            <BoxView
                        HeightRequest="1.2"
                        Color="{StaticResource AzulBordes}"
                        VerticalOptions="End"
                        Margin="0"></BoxView>
                        </Grid>
                    </StackLayout>

                    <StackLayout Grid.Column="1"
                                 Margin="10,10,0,0">
                        <Label Style="{StaticResource SubtitleLabel}">Despegue</Label>
                        <Grid>
                            <StackLayout Orientation="Horizontal" Margin="0">
                                <DatePicker TextColor="{StaticResource Azul1}"></DatePicker>
                                <TimePicker TextColor="{StaticResource Azul1}"
                                            Margin="50,0"></TimePicker>
                            </StackLayout>
                            <BoxView
                        HeightRequest="1.2"
                        Color="{StaticResource AzulBordes}"
                        VerticalOptions="End"
                        Margin="0"></BoxView>
                        </Grid>
                    </StackLayout>

                </Grid>

                <StackLayout>
                    <Label Style="{StaticResource SubtitleLabel}">Aerolinea</Label>
                    <Grid>
                        <Entry
                           TextColor="{StaticResource Azul1}"
                           Placeholder="Aerolinea del vuelo."               
                           PlaceholderColor="{StaticResource GrisBordes}"
                           ></Entry>
                        <BoxView
                        HeightRequest="1"
                        Color="{StaticResource AzulBordes}"
                        VerticalOptions="End"
                        Margin="0"></BoxView>
                    </Grid>
                </StackLayout>

                <StackLayout>
                    <Label Style="{StaticResource SubtitleLabel}">Puerta de Abordaje</Label>
                    <Grid>
                        <Entry 
                            Keyboard="Numeric"
                            TextColor="{StaticResource Azul1}"
                           Placeholder="Puerta de abordaje del vuelo."               
                           PlaceholderColor="{StaticResource GrisBordes}"
                           ></Entry>
                        <BoxView
                        HeightRequest="1"
                        Color="{StaticResource AzulBordes}"
                        VerticalOptions="End"
                        Margin="0"></BoxView>
                    </Grid>
                </StackLayout>

                <Border Padding="20"
                        Margin="0,30,0,40"
                        VerticalOptions="End"
                        Background="red"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="100"></RoundRectangle>
                    </Border.StrokeShape>
                    <Label
                       TextColor="White"
                       FontAttributes="Bold"
                        HorizontalOptions="Center">Confirmar</Label>
                </Border>

            </StackLayout>
            
        </Border>

        <Label Grid.Row="1"
               Margin="0,10"
               VerticalOptions="EndAndExpand"
               HorizontalOptions="CenterAndExpand"
               IsVisible="false"
                TextColor="Red">ERROR</Label>

    </Grid>
</ContentPage>